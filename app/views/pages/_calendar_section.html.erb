<div class="container" id="calendar">
  <div class="section-title blue">
    <h2>Calendar & Pricing</h2>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8">
      <div class="calendar">
        <h3>Calendar coming soon</h3>
      </div>
    </div>
    <div class="col-xs-12 col-md-4">
      <div class="pricing">
        <h3>Weekly prices</h3>
        <% prices.order(start_date: :asc).each do |price| %>
          <div class="week-price">
            <span class="price"><%= humanized_money_with_symbol(price.price) %></span>
            <div class="info">
              <p><%= price.period_name %></p>
              <span><%= price.start_date.strftime('%B %d') %> to <%= price.end_date.strftime('%B %d') %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
