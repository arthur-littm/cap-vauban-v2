<div class="container" id="reviews">
  <div class="section-title blue">
    <h2><%= title %></h2>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-7">
      <div class="reviews">
        <div class="owl-carousel-reviews owl-carousel owl-theme">
          <% reviews.each do |review| %>
            <div class="review">
              <%= simple_format(review.content) %>
              <hr>
              <div class="review-author">
                <span class="author"><%= review.author %></span>
                <span class="date"><%= review.published.strftime('%B %Y') %></span>
              </div>
            </div>

          <% end %>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-5">
      <div class="pricing">
        <h3><%= weekly_prices %></h3>
        <% prices.order(start_date: :asc).each do |price| %>
          <div class="week-price">
            <span class="price"><%= humanized_money_with_symbol(price.price) %></span>
            <div class="info">
              <p><%= price.period_name %></p>
              <span><%= price.start_date.strftime('%B %d') %> to <%= price.end_date.strftime('%B %d') %></span>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


