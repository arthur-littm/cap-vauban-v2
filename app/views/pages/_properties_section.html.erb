<div class="wrapper-blue">
  <div class="container" id="properties">
    <div class="section-title white">
      <h2><%= title %></h2>
    </div>
    <div class="row">
      <div class="flat-info">
        <div class="flat-header">
          <h3 class="text-center"><%= flat.name %></h3>
          <%= link_to btn, flat.calendar_url, target: "_blank", class: "btn btn-danger" %>
        </div>
        <div class="owl-carousel owl-theme">
          <% flat.flat_photos.order(:position).each do |flat_photo| %>
            <%#= raise %>
            <div class="flat-image" style="background-image: url(<%= image_path flat_photo.photo.url, sign_url: true %>)">
            </div>
          <% end %>
        </div>

        <div class="flat-description">
          <p><%= simple_format(locale == :en ? flat.description : flat.description_fr) %></p>
        </div>

        <div class="flat-equipment">
          <% if flat.wifi %>
            <span><i class="fas fa-fw fa-wifi"></i> <%= wifi %></span>
          <% end %>
          <% if flat.tv %>
            <span><i class="fas fa-fw fa-tv"></i> TV</span>
          <% end %>
          <% if flat.kitchen %>
            <span><i class="fas fa-fw fa-utensils"></i> <%= kitchen %></span>
          <% end %>
          <% if flat.washing_machine %>
            <span><i class="fas fa-fw fa-tshirt"></i> <%= washing %></span>
          <% end %>
          <% if flat.aircon %>
            <span><i class="fas fa-fw fa-snowflake"></i> <%= aircon %></span>
          <% end %>
          <span><i class="fas fa-fw fa-bed"></i> <%= flat.beds %> <%= beds %></span>
        </div>
      </div>
    </div>
  </div>
</div>


<%= content_for(:after_js) do %>
  <script>
    $(document).ready(function(){
      $('.owl-carousel').owlCarousel({
        loop:true,
        margin:10,
        nav:true,
        dots: false,
        responsive:{
          0:{
            items:1
          },
          600:{
            items:1
          },
          1000:{
            items:1
          }
        }
      })
    });
  </script>
<% end %>
